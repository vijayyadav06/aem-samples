<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Global Header"
    cq:showOnCreate="{Boolean}false"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
        margin="{Boolean}false"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <logo
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Logo"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <headerLogo
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldLabel="Header Logo"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_headerLogo"
                            name="./globalHeader_headerLogo"
                            rootPath="/content/dam"/>
                        <imageAltText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Image Alt Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_imageAltText"
                            name="./globalHeader_imageAltText"/>
                        <logoUrl
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldLabel="Logo URL"
                            required="{Boolean}true"
                            name="./globalHeader_logoUrl"
                            cq-msm-lockable="globalHeader_logoUrl"
                            rootPath="/content"
                            validation="Medtronic.Granite.Validation.ValidateEManualUrl"/>
                    </items>
                </logo>
                <searchButton
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Search Button Text"
                    required="{Boolean}true"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <collapsedViewText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Collapsed View Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_search_collapsedText"
                            name="./globalHeader_search_collapsedText"
                            value="Search"/>
                        <expandedViewText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Expanded View Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_search_expandedText"
                            name="./globalHeader_search_expandedText"
                            value="Close"/>
                        <searchPlaceholderText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Search Field Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_search_placeholderText"
                            name="./globalHeader_search_placeholderText"
                            value="Search"/>
                		<searchButtonText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Search Button"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_search_buttonText"
                            name="./globalHeader_search_buttonText"
                            value="Go"/>   
                		<searchLinkText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Link Text"
                            cq-msm-lockable="globalHeader_search_linkText"
                            name="./globalHeader_search_linkText"/>
                		<searchLinkUrl
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldLabel="Link URL"
                            cq-msm-lockable="globalHeader_search_linkUrl"
                            name="./globalHeader_search_linkUrl"
                            rootPath="/content"
                            validation="Medtronic.Granite.Validation.ValidateEManualUrl"/>
                		<searchResultsUrl
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldLabel="Search Results URL"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_search_resultsUrl"
                            name="./globalHeader_search_resultsUrl"
                            rootPath="/content"
                            validation="Medtronic.Granite.Validation.ValidateEManualUrl"/>
                    </items>
                </searchButton>
                <menuButton
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Menu Button Text"
                    required="{Boolean}true"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <collapsedViewText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Collapsed View Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_menu_collapsedText"
                            name="./globalHeader_menu_collapsedText"
                            value="Menu"/>
                        <expandedViewText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Expanded View Text"
                            required="{Boolean}true"
                            cq-msm-lockable="globalHeader_menu_expandedText"
                            name="./globalHeader_menu_expandedText"
                            value="Close"/>
                    </items>
                </menuButton>
            </items>
        </column>
    </items>
</jcr:root>
